{% extends "base.html.twig" %}


{% block body %}
<div class="body_bg">
{# 

SECTION @HEADER

 #}
{% include "partials/_header.html.twig" %}
{# 

SECTION @BANNIERE

 #}
<section class="banner_part">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-6 col-md-8">
                <div class="banner_text">
                    <div class="banner_text_iner text-danger">
                        {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name) }}
                                <div class="form-error">
                                    {{ form_errors(form.name) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.games) }}
                                {{ form_widget(form.games) }}
                                <div class="form-error">
                                    {{ form_errors(form.games) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.address) }}
                                {{ form_widget(form.address) }}
                                <div class="form-error">
                                    {{ form_errors(form.address) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.price) }}
                                {{ form_widget(form.price) }}
                                <div class="form-error">
                                    {{ form_errors(form.price) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.compatibility) }}
                                {{ form_widget(form.compatibility) }}
                                <div class="form-error">
                                    {{ form_errors(form.compatibility) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_row(form.submit, {'label': 'Modifier la machine'}) }}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
